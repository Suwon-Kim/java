import java.awt.BorderLayout;
import java.awt.Color;
import java.awt.Dimension;
import java.awt.GridLayout;
import java.util.concurrent.BrokenBarrierException;

import javax.swing.JButton;
import javax.swing.JCheckBox;
import javax.swing.JComboBox;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JPasswordField;
import javax.swing.JRadioButton;
import javax.swing.JTextField;
import javax.swing.border.EmptyBorder;
import javax.swing.border.LineBorder;
import javax.swing.border.TitledBorder;

public class ExEx extends JFrame {
	
	//private static final Dimension LBL_SIZE = new Dimension(100,30);
	private static final int TF_SIZE = 10;
	private JLabel lblId;
	private JLabel lblPassword;
	private JLabel lblName;
	private JLabel lblSex;
	private JLabel lblBirth;
	
	private JTextField tfId;
	private JPasswordField pfPassword;
	private JTextField tfName;
	
	private JRadioButton rbMale;
	private JRadioButton rbFemale;
	
	private JComboBox<String> cbYears;
	private JComboBox<String> cbMonths;
	private JComboBox<String> cbDays;
	
	private String[] years = new String[51];         
	private String[] months = new String[12];
	private String[] days = new String[31];
	
	private JCheckBox[] cbHobby = new JCheckBox[6];
	private String[] hobby = {"강도","절도","폭력","사기","협박","공갈"};
	
	private JButton btnOk;
	private JButton btnCancel;
	
	public ExEx() {
		init();
		setDisplay();
		showFrame();
	}
	private void init() {
		
		lblId = new JLabel("아이디");
		//lblId.setPreferredSize(LBL_SIZE);
		lblPassword = new JLabel("비밀번호");
		//lblPassword.setPreferredSize(LBL_SIZE);
		lblName = new JLabel("이름");
		//lblName.setPreferredSize(LBL_SIZE);
		lblSex = new JLabel("성별");
		//lblSex.setPreferredSize(new Dimension(136,30));
		lblBirth = new JLabel("생년월일");
		
		tfId = new JTextField(TF_SIZE);
		pfPassword = new JPasswordField(TF_SIZE);
		tfName = new JTextField(TF_SIZE);
		
		rbMale = new JRadioButton("남자",true);
		rbFemale = new JRadioButton("여자");
		
		int year = 1970;
		for(int idx = 0; idx < years.length; idx++) {
			years[idx] = String.valueOf(year);
			year++;
		}
		cbYears = new JComboBox(years);
		
		int month = 1;
		for(int idx = 0; idx < months.length; idx++) {
			months[idx] = String.valueOf(month);
			month++;
		}
		cbMonths = new JComboBox(months);
		
		int day = 1;
		for(int idx = 0; idx < days.length; idx++) {
			days[idx] = String.valueOf(day);
			day++;
		}
		cbDays = new JComboBox(days);
		
		for(int idx = 0; idx < hobby.length; idx++) {
			cbHobby[idx] = new JCheckBox(hobby[idx]);
		}
		
		btnOk = new JButton("확인");
		btnCancel = new JButton("취소");
		
	}
	private void setDisplay() {
		
		
		JPanel pnlLeft = new JPanel(new GridLayout(0,1));
		pnlLeft.add(lblId);
		pnlLeft.add(lblPassword);
		pnlLeft.add(lblName);
		pnlLeft.add(lblSex);
		pnlLeft.add(lblBirth);
		
		JPanel pnlSex = new JPanel();
		pnlSex.add(rbMale);
		pnlSex.add(rbFemale);
		
		JPanel pnlBirth = new JPanel();
		pnlBirth.add(cbYears);
		pnlBirth.add(new JLabel("월"));
		pnlBirth.add(cbMonths);
		pnlBirth.add(new JLabel("일"));
		pnlBirth.add(cbDays);
		
		JPanel pnlId = new JPanel();
		pnlId.add(tfId);
		JPanel pnlPass = new JPanel();
		pnlPass.add(pfPassword);
		JPanel pnlName = new JPanel();
		pnlName.add(tfName);
		
		JPanel pnlRight = new JPanel(new GridLayout(0,1));
		pnlRight.add(pnlId);
		pnlRight.add(pnlPass);
		pnlRight.add(pnlName);
		pnlRight.add(pnlSex);
		pnlRight.add(pnlBirth);
		
		JPanel pnlNorth = new JPanel(new BorderLayout());
		pnlNorth.add(pnlLeft, BorderLayout.WEST);
		pnlNorth.add(pnlRight, BorderLayout.EAST);
		
		JPanel pnlHobby = new JPanel(new GridLayout(2,3));
		pnlHobby.setBorder(new TitledBorder(new LineBorder(Color.BLACK),"취미"));
		
		JPanel pnlSouth = new JPanel();
		pnlSouth.add(btnOk);
		pnlSouth.add(btnCancel);
		
		for(int idx = 0; idx < cbHobby.length; idx++) {
			pnlHobby.add(cbHobby[idx]);
		}
		
		JPanel pnlMain = new JPanel(new BorderLayout());
		
		pnlMain.add(pnlNorth, BorderLayout.NORTH);
		pnlMain.add(pnlHobby, BorderLayout.CENTER);
		pnlMain.add(pnlSouth, BorderLayout.SOUTH);
		pnlMain.setBorder(new EmptyBorder(10,10,10,10));
		
		add(pnlMain, BorderLayout.CENTER);
		
		
	}
	private void showFrame() {
		setTitle("Join Form");
		setLocationRelativeTo(null);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		pack();
		setVisible(true);
	}
	public static void main(String[] args) {
		new ExEx();
	}
}
