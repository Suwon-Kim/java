package kr.ac.green;

import java.io.File;
import java.io.IOException;

public class Quiz {
	//파일을 복사하는 코드를 만들고 테스트 하라.
	//	src : 원본
	//	copy : 복사본
	// 복사본 파일 이름은 *_copy.* 라고 붙인다.
	// ex) a.txt -> a_copy.txt
	public static void copy(File src) {
		
		File f = new File("c:\\src\\src.text");
		f.mkdir();
		try {
			f.createNewFile();
		} catch (IOException e) {
			e.printStackTrace();
		}
		src.mkdir();
		try {
			src.createNewFile();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	
	public static void main(String[] args) {
		new File("c:\\src\\src.copy");
	}
}
