public class ItemEventEx1 extends JFrame {
	private JRadioButton rbtnMook;
	private JRadioButton rbtnZzi;
	private JRadioButton rbtnFa;
	
	private JButton btnStart;
	
	private JTextArea tfResult;
	
	public ItemEventEx1() {
		init();
		setDisplay();
		showFrame();
		addListener();
	}
