import java.awt.BorderLayout;

import javax.swing.JButton;
import javax.swing.JComboBox;
import javax.swing.JLabel;
import javax.swing.JPanel;

class LottoStart {
	private JLabel photoImage;
	private JLabel HowManyBuy;
	private JLabel MaxBuy;
	
	private JComboBox combo;
	private JButton btnButton;
	private JButton btnCancel;
	
	private JPanel pnlNorth;
	private JPanel pnlCenter;
	private JPanel pnlSouth;
	
	public LottoStart() {
		init();
		setDisplay();
		addListeners();
		showFrame();
		
	}
	public void init() {
		photoImage = new JLabel();
		HowManyBuy = new JLabel("몇장을 구매하시겠습니까?");
		MaxBuy = new JLabel("(최대 5장 구매가능)");
		
		
		String[] count = {"1","2","3","4","5"};
		combo = new JComboBox(count);
		
		btnButton = new JButton("구매");
		btnCancel = new JButton("취소");
		
	}
	public void setDisplay() {
		pnlNorth = new JPanel();
		pnlCenter = new JPanel(new BorderLayout());
		pnlSouth = new JPanel();
		
	}
	public void addListeners() {
		pnlCenter.add(HowManyBuy, BorderLayout.NORTH);
		pnlCenter.add(MaxBuy, BorderLayout.CENTER);
		pnlCenter.add(combo, BorderLayout.SOUTH);
	}
	public void showFrame() {
		
	}
	public static void main(String[] args) {
		
	}
}