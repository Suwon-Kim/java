package ex;

public class HumanEx {

	private ISpeakableEx sp;
	
	public HumanEx(ISpeakableEx sp) {
		this.sp = sp;
	}
	
	public void performSpeak(){
		sp.speak();
	}
	
	public static void main(String[] args) {
		
		HumanEx h = new HumanEx(new ISpeakableEx() {
			
			@Override
			public void speak() {
				System.out.println("hello");
			}
		});
		h.performSpeak();
		
		HumanEx h2 = new HumanEx(() -> System.out.println("bye~"));
		h2.performSpeak();
		
	}
}
