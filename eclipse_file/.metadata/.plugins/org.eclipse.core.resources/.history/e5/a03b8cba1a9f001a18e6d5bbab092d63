package kr.ac.green;

import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;

/*
 * 	stream 	- 1. byte
 * 					a. 	I : InputStream
 * 					b.	O : OutputStream
 * 			- 2. char
 * 					a. 	I : Reader
 * 					b.  O : Writer
 */

public class IOEx1 {
	// 파일에 쓰기(byte)
	public static void utilJDK6() {
		// ~JDK1.6
		FileOutputStream fos = null;		
		try {
			fos = new FileOutputStream("c:\\study\\a.txt");
			//byte < char < int
			try {
				fos.write('b');	//타입은 바이트인데 바이트가 들어가면 계속 형변환 해줘야해서 
								//int로 정의한거임 ( api문서 )
			} 
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		} catch (IOException e) {
			e.printStackTrace();
		} finally {
			try {
				fos.close();				
			} catch (Exception e) {}	//외부파일에 접근하면 자원해제를 반드시 해줘야함
		}
	}
	public static void afterJDK7() {
		// JDK1.7~ (AutoCloseable)				
		try( FileOutputStream fos = new FileOutputStream("a.txt") ) {
			
		} catch (IOException e) {
			e.printStackTrace();
		} 
	}
	public static void main(String[] args) {
		
	}
}








