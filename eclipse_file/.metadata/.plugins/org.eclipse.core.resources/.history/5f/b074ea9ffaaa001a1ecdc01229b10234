import java.awt.Color;
import java.awt.FlowLayout;
import java.awt.GridLayout;

import javax.swing.ButtonGroup;
import javax.swing.JButton;
import javax.swing.JCheckBox;
import javax.swing.JComboBox;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JPasswordField;
import javax.swing.JRadioButton;
import javax.swing.JTextField;
import javax.swing.border.LineBorder;
import javax.swing.border.TitledBorder;

public class UI_Test extends JFrame {
	private static final int TF_SIZE = 20;
	
	private JLabel lblId;
	private JLabel lblPassword;
	private JLabel lblName;
	private JLabel lblSex;
	private JLabel lblBirth;
	
	private LineBorder lb;
	private TitledBorder tbHobby;
	
	private JTextField tfId;
	private JPasswordField pfPassword;
	private JTextField tfName;
	
	private JRadioButton rbMale;
	private JRadioButton rbFemale;
	
	private JComboBox<String> birthYear;
	private JComboBox<String> birthMonth;
	private JComboBox<String> birthDay;
	
	private String[] years = new String[100];
	private String[] months = new String[11];
	private String[] days = new String[31];
	
	private JCheckBox[] cbHobby = new JCheckBox[3];
	private String[] hobby = {"강도","절도","폭력","사기","협박","공갈"};
	
	private JButton btnOk;
	private JButton btnCancel;
	
	public UI_Test() {
		init();
		setDisplay();
		showFrame();
	}
	private void init() {
		lblId = new JLabel("아이디");
		lblPassword = new JLabel("비밀빈호");
		lblName = new JLabel("이름");
		lblSex = new JLabel("성별");
		lblBirth = new JLabel("생년월일");
		tbHobby = new TitledBorder(new LineBorder(Color.BLACK, 1), "취미");
		
		tfId = new JTextField(TF_SIZE);
		pfPassword = new JPasswordField(TF_SIZE);
		tfName = new JTextField(TF_SIZE);
		
		rbMale = new JRadioButton("남자",true);
		rbFemale = new JRadioButton("여자");
		
		ButtonGroup group = new ButtonGroup();
		group.add(rbMale);
		group.add(rbFemale);
		
		
		for(int i = 1930; i < 2020; i++) {
			years[i] = String.valueOf(i); 
		}
		for(int j = 1; j < 13; j++) {
			months[j] = String.valueOf(j);
		}
		for(int o = 1; o < 32; o++) {
			days[o] = String.valueOf(o);
		}
		
		birthYear = new JComboBox<String>(years);
		birthMonth = new JComboBox<String>(months);
		birthDay = new JComboBox<String>(days);
		
		for(int i = 0; i < cbHobby.length; i++) {
			cbHobby[i] = new JCheckBox(hobby[i]);
		}
		btnOk = new JButton("확인");
		btnCancel = new JButton("취소");
	}
	private void setDisplay() {
		JPanel pnlMain = new JPanel(new GridLayout(0,1));
		JPanel pnlId = new JPanel(new FlowLayout());
		pnlId.add(lblId);
		pnlId.add(tfId);
		
		JPanel pnlPassword = new JPanel(new FlowLayout());
		pnlPassword.add(lblPassword);
		pnlPassword.add(pfPassword);
		
		JPanel pnlName = new JPanel(new FlowLayout());
		pnlName.add(lblName);
		pnlName.add(tfName);
		
		JPanel pnlSex = new JPanel(new FlowLayout());
		pnlSex.add(rbMale, true);
		pnlSex.add(rbFemale);
		
		JPanel pnlBirth = new JPanel(new FlowLayout());
		pnlBirth.add(lblBirth);
		pnlBirth.add(birthYear);
		pnlBirth.add(new JLabel("년"));
		pnlBirth.add(birthMonth);
		pnlBirth.add(new JLabel("월"));
		pnlBirth.add(birthDay);
		pnlBirth.add(new JLabel("일"));
		
		JPanel pnlBtn = new JPanel(new FlowLayout());
		pnlBtn.add(btnOk);
		pnlBtn.add(btnCancel);
		
		pnlMain.add(pnlId);
		pnlMain.add(pnlPassword);
		pnlMain.add(pnlName);
		pnlMain.add(pnlSex);
		pnlMain.add(pnlBirth);
		pnlMain.add(pnlBtn);
	}
	private void showFrame() {
		setTitle("Join Form");
		setLocationRelativeTo(null);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		pack();
		setVisible(true);
	}
	public static void main(String[] args) {
		new UI_Test();
	}
}
