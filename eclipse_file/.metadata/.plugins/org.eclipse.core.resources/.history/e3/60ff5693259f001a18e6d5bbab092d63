package kr.ac.green;

import java.io.File;
import java.io.FileInputStream;
import java.io.IOException;

public class Quiz {
	//파일을 복사하는 코드를 만들고 테스트 하라.
	//	src : 원본
	//	copy : 복사본
	// 복사본 파일 이름은 *_copy.* 라고 붙인다.
	// ex) a.txt -> a_copy.txt
	public static void copy(File src) {
		// File src = new File("apple.jpg");
		try (FileInputStream fis = new FileInputStream("D:\\java\\Eclipse_File\\05_26\\apple.jpg") ) {
			int data = -1;
			while((data = fis.read()) != -1) {
				System.out.println(data);
			}
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
	
	public static void main(String[] args) {
		copy(new File("apple.jpg"));
	}
}
