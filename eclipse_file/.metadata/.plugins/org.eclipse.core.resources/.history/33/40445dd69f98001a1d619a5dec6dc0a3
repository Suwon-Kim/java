package kr.ac.green;

import java.awt.BorderLayout;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JToolBar;

/*
 * 새창 띄우기 - JDialog, JFrame
 */
public class MyFrame extends JFrame {
	
	private JButton btnOpen;
	
	public MyFrame() {
		btnOpen = new JButton("Open");
		/*
		 * BorderLayout에만 사용가능
		 * North, East, West, South 영역이 비어 있어야함.
		 */
		JToolBar tBar = new JToolBar();
		tBar.setFloatable(false);
		tBar.add(new JButton("Open"));
		tBar.add(new JButton("Save"));
		tBar.add(new JButton("Exit"));
		
		JPanel pnlCenter = new JPanel(new BorderLayout());
		
		JPanel pnl = new JPanel();
		pnl.add(btnOpen);
		pnlCenter.add(pnl, BorderLayout.SOUTH);
		
		add(tBar, BorderLayout.NORTH);
		add(pnlCenter, BorderLayout.CENTER);
		
		btnOpen.addActionListener((e)-> new MyDialog(MyFrame.this));
		
		
		setTitle("새창열기");
		setSize(400, 300);
		setLocation(100, 0);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		setVisible(true);
	}
	
	public static void main(String[] args) {
		new MyFrame();
	}
}
