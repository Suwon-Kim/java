package kr.ac.green;

import java.io.File;

public class FileEx6 {
	
	public static void main(String[] args) {
		File dir = new File("c:");	// 디렉토리 (경로)
		File[] list = dir.listFiles();	// 디렉토리일때만 가능
		for(File temp : list) {
				String name = temp.getName();
				if(temp.isDirectory()) {
					name = "[" + name + "]";
				}
				System.out.println(name);
			}
		}
	}

