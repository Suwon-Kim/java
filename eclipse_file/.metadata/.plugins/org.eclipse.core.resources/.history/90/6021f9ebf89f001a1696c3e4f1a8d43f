package kr.ac.green;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;
//lotto.jpg를 복사한다.
public class Quiz2 {
	
	public static void copy(File src) {
		//File src = new File("C:\\study\\lotto.jpg");
		
		src = src.getAbsoluteFile(); // 타입이 파일임
		System.out.println(src);
		//C:\study\lotto.jpg
		String path = src.getPath();
		System.out.println(path);
		//C:\study\lotto.jpg
		int index = path.lastIndexOf("."); 
		System.out.println(index);
		//14
		String ext = path.substring(index);
		System.out.println(ext);
		//jpg
		String copy = path.substring(0,index);
		System.out.println(copy);
		copy = copy + "_copy" + ext;
		System.out.println(copy);
		
		FileInputStream fis = null;
		FileOutputStream fos = null;
		
		try {
			fis = new FileInputStream(src);						//읽기
			fos = new FileOutputStream(copy);					//쓰기		
			int data = -1;
			while( (data = fis.read()) != -1) {
				fos.write(data);
			}
		} catch (IOException e) {
			e.printStackTrace();
		} finally {
			try {
				fis.close();
			} catch (Exception e) {
				
			}
			try {
				fos.close();
			} catch (Exception e) {
				
			}
		}
	
	}
	public static void main(String[] args) {
		copy(new File("C:\\study\\lotto.jpg"));
	}
}