		FileOutputStream fos = null;
		try {
			fos = new FileOutputStream("data.txt");
			fos.write('하');
			fos.write('이');
			fos.write('~');
		} catch (IOException e) {
			e.printStackTrace();
		} finally {
			MyUtils.closeAll(fos);
		}
	}
	
	
	public static void main(String[] args) {
		writeToFile();
	}
}
