package ex;

import java.awt.event.WindowAdapter;
import java.awt.event.WindowEvent;

public class Ex1Listener extends WindowAdapter{
	
	private CounterEx ex1;
	
	public Ex1Listener(CounterEx ex1){
		this.ex1 = ex1;
	}
	
	@Override
	public void windowClosing(WindowEvent we){
		ex1.closeWindow();
	} 
}
