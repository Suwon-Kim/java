package kr.ac.green;
import javax.swing.ButtonGroup;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JMenu;
import javax.swing.JMenuBar;
import javax.swing.JMenuItem;
import javax.swing.JPanel;
import javax.swing.JRadioButtonMenuItem;

public class MenuEx1 extends JFrame {
	private JMenuBar mBar;
	
	private JMenu mFile;
	
	private JMenuItem miFemale_singer;
	private JMenuItem miMale_singer;
	private JMenuItem miExit;
	
	private JRadioButtonMenuItem rbmiOptionFMA;
	private JRadioButtonMenuItem rbmiOptionFMB;
	
	private JRadioButtonMenuItem rbmiOptionMA;
	private JRadioButtonMenuItem rbmiOptionMB;
	
	private JPanel pnlSouth;
	
	private JLabel lblImage;
	
	private MenuEx1() {
		init();
		setDisplay();
		addListeners();
		showFrame();
	}
	private void init() {
		mBar = new JMenuBar();
		
		mFile = new JMenu("File");
		
		miFemale_singer = new JMenuItem("여자가수");
		miMale_singer = new JMenuItem("남자가수");
		miExit = new JMenuItem("종료");
		
		rbmiOptionFMA = new JRadioButtonMenuItem("아이유", true);
		rbmiOptionFMB = new JRadioButtonMenuItem("에일리");
		
		ButtonGroup group1 = new ButtonGroup();
		group1.add(rbmiOptionFMA);
		group1.add(rbmiOptionFMB);
		
		ButtonGroup group2 = new ButtonGroup();
		group2.add(rbmiOptionMA);
		group2.add(rbmiOptionMB);
		
		rbmiOptionMA = new JRadioButtonMenuItem("서장훈",true);
		rbmiOptionMB = new JRadioButtonMenuItem("이수근");
		
		
		
	}
	private void setDisplay() {
		
	}
	private void addListeners() {
		miFemale_singer.add(rbmiOptionFMA);
		miFemale_singer.add(rbmiOptionFMB);
		
		miMale_singer.add(rbmiOptionMA);
		miMale_singer.add(rbmiOptionMB);
		
		mFile.add(miFemale_singer);
		mFile.add(miMale_singer);
		mFile.add(miExit);
		
		mBar.add(mFile);
		
		setJMenuBar(mBar);
		pnlSouth.add(lblImage);
		add(pnlSouth);
	}
	private void showFrame() {
		setTitle("창");
		setLocationRelativeTo(null);
		setSize(400,400);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		setVisible(true);
	}

	public static void main(String[] args) {
		
	}
}